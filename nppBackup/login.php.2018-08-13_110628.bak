">

	
	<!-- login -->
	<div class="w3-display-middle w3-col l3 m6 s12 w3-card-4 w3-round-large w3-white" style="opacity:1; padding:24px;">
		<!-- middle -->
		<div class="w3-container w3-text-dark-gray w3-center">
		<h3 onclick="changeText(this)"><span class="w3-text-red"><b>P</b></span>
			<span class="w3-text-blue"><b>A</b></span>
			<span class="w3-text-red"><b>M</b><span>
			<span class="w3-text-blue"><b>S</b></span></h3>
			<script>
			function changeText(id) {
			id.innerHTML = "";
			}
			</script>
			<h4 class="">
			<span class="w3-text-blue-gray">Project</span>
			<span class="w3-text-blue">Assignment</span>
			<br>
			<span class="w3-text-red">Management</span>
			<span class="w3-text-gray">System</span>
			</h4>
